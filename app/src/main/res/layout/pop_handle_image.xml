<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dd111222"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/handle_back"
            android:textSize="@dimen/text_size_18"
            android:padding="8dp"
            android:text="返回"
            android:textColor="@color/md_grey_200"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/handle_save"
            android:textSize="@dimen/text_size_18"
            android:padding="8dp"
            android:text="保存"
            android:textColor="@color/md_grey_200"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/handle_image"
        android:src="@drawable/load_pic"
        android:minWidth="200dp"
        android:minHeight="150dp"
        android:maxHeight="250dp"
        android:maxWidth="400dp"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/circle_rect_alph_white"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/md_brown_900"
            android:hint="水印"
            android:id="@+id/waterText"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:lines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/waterTextDone"
            android:layout_marginRight="10dp"
            android:background="@drawable/done_blue"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="@color/md_grey_200"
            android:text="饱和度"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar
            android:progress="127"
            android:max="255"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:id="@+id/satura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:thumbOffset="-1dp"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="@color/md_grey_200"
            android:text="色相"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar
            android:progress="127"
            android:max="255"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:id="@+id/hue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:thumbOffset="-1dp"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="@color/md_grey_200"
            android:text="亮度"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar
            android:progress="127"
            android:max="255"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:id="@+id/lum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:thumbOffset="-1dp"
            />
    </LinearLayout>
</LinearLayout>