<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/feedToLayout"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/feed_to_time"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@id/feed_to_time"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar"
            android:id="@+id/feed_to_head"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_below="@id/feed_to_time"
            android:id="@+id/feed_to_content"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/feed_to_head"
            android:background="@drawable/chatto_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedFromLayout"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/feed_from_time"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@id/feed_from_time"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar"
            android:id="@+id/feed_head"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_below="@id/feed_from_time"
            android:id="@+id/feed_from_content"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/feed_head"
            android:background="@drawable/chatfrom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>